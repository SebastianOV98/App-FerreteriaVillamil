<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height = "wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation = "vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:padding="6dp">
            <ImageView
                android:id="@id/iconImageViewProducto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                >
            </ImageView>
            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconImageViewProducto"
                android:orientation = "vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iconImageViewProducto">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Hola"
                    android:textColor = "@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/PrecioTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor = "@android:color/black"
                    android:text="Cali"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/CantidadTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cali"
                    android:textColor = "@android:color/black"
                    android:textSize="14sp"/>

            </LinearLayout>


            <ImageButton
                android:id="@+id/iconImageButton2Producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:onClick="eliminar"
                app:srcCompat="@drawable/ic_baseline_edit_24"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <ImageButton
                android:id="@+id/iconImageButton3Producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:onClick="eliminar"
                app:srcCompat="@drawable/ic_baseline_delete_24"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>