<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height = "wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation = "vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation = "horizontal"
            android:padding="6dp">
            <ImageView
                android:id="@id/iconImageViewDomicilio"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/domicilio"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                >
            </ImageView>
            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/iconImageViewDomicilio"
                android:orientation = "vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iconImageViewDomicilio">

                <TextView
                    android:id="@+id/nombreTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Pedido"
                    android:textColor = "@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/barrioTextView"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Cali"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/direccionTextView"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Cali"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/estadoTextView"
                    android:layout_width="match_parent"
                    android:textColor="#F44336"
                    android:layout_height="wrap_content"
                    android:text="Cali"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <ImageButton
                android:id="@+id/iconImageButton2Categoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:onClick="eliminar"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
